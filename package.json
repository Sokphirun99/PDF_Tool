{
  "name": "pdf-tools-electron",
  "version": "1.0.0",
  "description": "A comprehensive PDF manipulation tool built with Electron - ilovepdf.com clone",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron src/main/main.js",
    "dev": "electron src/main/main.js --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:universal": "electron-builder --mac --universal",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:mac:x64": "electron-builder --mac --x64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "lint": "echo 'Linting...' && exit 0",
    "test": "echo 'Running tests...' && exit 0",
    "clean": "rm -rf build/dist && rm -rf temp/*",
    "icons": "node scripts/generate-icons.js",
    "prebuild": "npm run icons",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "pdf",
    "electron",
    "pdf-tools",
    "convert",
    "merge",
    "split"
  ],
  "author": "phirun",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "html-pdf": "^3.0.1",
    "jspdf": "^2.5.1",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "officegen": "^0.6.5",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf-poppler": "^0.2.1",
    "sharp": "^0.32.6",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.pdftools.electron",
    "productName": "PDF Tools",
    "directories": {
      "output": "build/dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!build",
      "!temp",
      "!docs",
      "!scripts"
    ],
    "mac": {
      "icon": "public/assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        },
        {
          "target": "zip",
          "arch": ["arm64"]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "public/assets/icon.ico"
    },
    "linux": {
      "icon": "public/assets/icon.png"
    }
  }
}
